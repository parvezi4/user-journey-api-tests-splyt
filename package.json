{
  "name": "api-test-automation",
  "version": "1.0.0",
  "description": "API test automation project using TypeScript, Node.js, Jest and Supertest.",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:api": "ts-node src/tests/api.test.ts"
  },
  "dependencies": {
    "supertest": "^7.1.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "src/tests/reports",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "author": "",
  "license": "ISC"
}
